
let a = 10 /* let usado para um valor de variavel q pode ser alterada ao decorrer do programa, dando a o valor de 10*/ 
let b = 10 /* let usado para um valor de variavel q pode ser alterado ao decorrer do programa*/

/* se ele pedisse o console.log (a,b) o valor seria 10,10 */ 

console.log(b) /*ele vai imprimir oq foi escrito acima*/ 

b = 5 /*o valor de b que era 10, mudamos para 5*/
console.log(a,b) /*o valor agr nao sera mais 10,10, sera 10,5 pq alteramos somente o valor b para 5*/ 



let a = 10 /* o valor da variante é 10*/
let b = 20 /* o valor da variante é 20*/
c = a /* o valor da gaveta a q tem o valor de 10, vai fazer a gaveta c ter este valor tambem*/
b = c /* a gaveta c tem o valor 10, entao a gaveta b vai valor agr 10 e nao mais 20*/
a = b /* a gaveta b vale 10 e agr a gaveta a tambem ira terá o mesmo valor*/

console.log (a,b,c) /* agr o console. log tera o resultado de 10,10,10 e nao mais 10,20,x*/ 


let p = prompt ("quantas horas voce trabalha por dia?") /* o sistema irá pedir que o usuario responsa a questao solicitada e armazenará na gaveta/variavel*/
let t = prompt("quanto voce recebe por dia?") /* o sistema ira pedir que o usuario responda a questao solicitada, e armazenará na gaveta/variavel*/
console.log("Voce recebe",t,"/",p,"por hora") /*o console ira salvar a frase com a informaçao pedida do prompt automaticamente*/
